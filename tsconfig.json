{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"allowJs": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
